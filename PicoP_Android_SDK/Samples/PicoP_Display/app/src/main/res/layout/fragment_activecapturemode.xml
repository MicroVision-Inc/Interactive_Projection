<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/fragment_activecapturemode_btn_mode"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Select Mode"
            android:textSize="12dp" />

        <Button
            android:id="@+id/fragment_activecapturemode_btn_set"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="200dp"
            android:text="Set"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_activecapturemode_btn_get"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Get"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/fragment_activecapturemode_tv_mode"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_weight="1"
            android:text="Text String"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>