<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/fragment_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get video properties" />

    <TextView
        android:id="@+id/fragment_properties_tv_framerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />


    <TextView
        android:id="@+id/fragment_properties_tv_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mTvGetPropertieshorizontalPixels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="20dp" />

</LinearLayout>