<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/fragment_systemsinfo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="System Info" />


    <TextView
        android:id="@+id/fragment_tv_systemsinfo_serialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fragment_tv_systemsinfo_softwareVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fragment_tv_systemsinfo_fpgaVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />

    <Button
        android:id="@+id/fragment_systemstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get System Status" />

    <TextView
        android:id="@+id/fragment_tv_systemstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />


    <TextView
        android:id="@+id/fragment_tv_systemstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />


    <TextView
        android:id="@+id/fragment_tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textSize="20dp" />

</LinearLayout>

