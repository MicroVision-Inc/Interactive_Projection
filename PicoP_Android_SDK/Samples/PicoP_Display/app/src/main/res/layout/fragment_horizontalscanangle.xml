<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_horizscanangle_tv_title_set"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Select Horizontal Scan Angle :"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <NumberPicker
            android:id="@+id/fragment_horizscanangle_numberPicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:text=" . "/>

        <NumberPicker
            android:id="@+id/fragment_horizscanangle_numberPicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_commit_horizscanangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commit "
                android:textColor="@android:color/holo_green_light"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_horizscanangle_btn_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Horizontal Scan Angle"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fragment_horizscanangle_set_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:text="Set result"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_horizscanangle_tv_title_get"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:text="Get Horizontal Scan Angle"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_horizscanangle_btn_get_current"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Current"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fragment_horizscanangle_tv_get_current"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="66dp"
                android:layout_weight="1"
                android:text="Text String"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_horizscanangle_btn_get_startup"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Startup"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fragment_horizscanangle_tv_get_startup"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="66dp"
                android:layout_weight="1"
                android:text="Test String"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_horizscanangle_btn_get_factory"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Factory"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fragment_horizscanangle_tv_get_factory"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="66dp"
                android:layout_weight="1"
                android:text="Test String"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>