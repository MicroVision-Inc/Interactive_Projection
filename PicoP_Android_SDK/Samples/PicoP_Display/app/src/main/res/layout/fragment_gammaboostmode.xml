<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_gammaboost_tv_title_set"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text="Select Color:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/fragment_gammaboost_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Red"/>
            <RadioButton android:id="@+id/fragment_gammaboost_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue"/>
            <RadioButton android:id="@+id/fragment_gammaboost_color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_gammaboost_tv_titl"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text="Select Boost Mode:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/fragment_gammaboost_mode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="12sp"
                android:text="BOOST_MODE_NONE"/>
            <RadioButton android:id="@+id/fragment_gammaboost_mode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="BOOST_MODE_VIRTUAL_LUMENS_30PCT"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_commit_gammaboost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commit "
            android:textColor="@android:color/holo_green_light"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_gammaboost_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Gamma Boost Mode"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/fragment_gammaboost_set_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:text="Set result"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_gammaboost_tv_get"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:text="Get Gamma Boost Mode"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_gammaboost_btn_get_current"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Current"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragment_gammaboost_tv_get_current"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:text="Text String"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_gammaboost_btn_get_startup"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Startup"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragment_gammaboost_tv_get_startup"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:text="Test String"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_gammaboost_btn_get_factory"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Factory"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragment_gammaboost_tv_get_factory"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:text="Test String"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>